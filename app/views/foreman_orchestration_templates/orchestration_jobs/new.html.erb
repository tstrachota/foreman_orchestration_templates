<% title _("New Orchestration") %>

<%= render 'form' %>

<script>
function refresh_config_form(element) {

  var url = $('#orchestration_job_configuration').data('refresh-url');
  var data = $('form input,select,textarea').serialize();

  tfm.tools.showSpinner();

  return $.ajax({
    type: 'post',
    url: url,
    data: data,
    complete: function(){ tfm.tools.hideSpinner(); },
    success: function(response) {
      $('#orchestration_job_configuration').replaceWith(response);

      $(document.body).trigger('ContentLoad');
    }
  })
}
</script>
